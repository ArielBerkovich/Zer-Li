<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>

<BorderPane xmlns="http://javafx.com/javafx/9.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="prototype.ProductInfoFormController">
   <center>
      <AnchorPane prefHeight="200.0" prefWidth="320.0" BorderPane.alignment="CENTER">
         <children>
            <Label layoutX="38.0" layoutY="50.0" text="Product's ID:" />
            <Label layoutX="20.0" layoutY="85.0" text="Product's name:" />
            <Label layoutX="26.0" layoutY="120.0" text="Product's type:" />
            <TextField id="productIDtxt" fx:id="productIDtxt" editable="false" layoutX="124.0" layoutY="48.0" />
            <TextField fx:id="productNametxt" layoutX="124.0" layoutY="83.0" />
            <TextField fx:id="productTypetxt" editable="false" layoutX="124.0" layoutY="118.0" />
            <Button fx:id="saveBtn" layoutX="240.0" layoutY="160.0" mnemonicParsing="false" onAction="#OnSave" prefWidth="60.0" text="Save" />
            <Button fx:id="closeBtn" layoutX="20.0" layoutY="160.0" mnemonicParsing="false" onAction="#onClose" prefWidth="60.0" text="Close" />
            <Label layoutX="20.0" layoutY="15.0" text="Product's info:" />
         </children>
      </AnchorPane>
   </center>
</BorderPane>
