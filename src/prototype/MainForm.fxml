<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>

<BorderPane xmlns="http://javafx.com/javafx/9.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="prototype.MainFormController">
   <center>
      <AnchorPane prefHeight="200.0" prefWidth="275.0" BorderPane.alignment="CENTER">
         <children>
            <Label layoutX="20.0" layoutY="15.0" text="List of products:" />
            <ComboBox id="productCbx" fx:id="productCbx" layoutX="58.0" layoutY="50.0" prefHeight="26.0" prefWidth="160.0" promptText="[Select product]" />
            <Button id="showProductBtn" fx:id="showProductBtn" layoutX="58.0" layoutY="85.0" mnemonicParsing="false" onAction="#onShowProductInfo" prefWidth="160.0" text="Show Product Info" />
            <Button id="exitBtn" fx:id="exitBtn" layoutX="107.0" layoutY="150.0" mnemonicParsing="false" onAction="#onExit" prefWidth="60.0" text="Exit" />
         </children>
      </AnchorPane>
   </center>
</BorderPane>
